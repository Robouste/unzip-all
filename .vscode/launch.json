{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest Framework",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug", "--", "--inspect-brk"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node-terminal",
      "name": "Debug Tests",
      "request": "launch",
      "command": "npm run test",
      "cwd": "${workspaceFolder}"
    }
  ]
}
